<p id="notice"><%= notice %></p>

<h1>Listing Agents</h1>

<style>
  th,td{border:1px solid #BABABA }
</style>

<table>
  <thead>
    <tr>
      <th>Ip</th>
      <th>Cpu</th>
      <th>Disk</th>
      <th>Memory</th>
      <th>Last Updated Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @agents.each do |agent| %>
      <tr>
        <td><%= agent.ip %></td>
        <td><%= agent.cpu %></td>
        <td><%= agent.disk %></td>
        <td><%= agent.memory %></td>
        <td><%= time_ago_in_words(agent.updated_at) %></td>
        <td><%= link_to 'Show', agent %></td>
        <td><%= link_to 'Edit', edit_agent_path(agent) %></td>
        <td><%= link_to 'Destroy', agent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <td><%= link_to 'New Agent', new_agent_path %></td>
      <td><%= link_to 'Sort by CPU', index_sort_by_path(:cpu) %></td>
      <td><%= link_to 'Sory by Disk', index_sort_by_path(:disk) %></td>

  </tbody>
</table>

<br>

